{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "emitDeclarationOnly": true,
    "lib": [
      "es2024",
      "ESNext.Disposable",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@zt/*": ["./drizzle/zotero/*"],
      "@bbt/*": ["./drizzle/bbt/*"],
      "@/*": ["./src/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./drizzle/**/*.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist/**/*"
  ]
}