{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "lib": [
      "es2024",
      "ESNext.Disposable",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "moduleDetection": "auto",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./src/**/*.ts",
    "./drizzle/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist/**/*"
  ]
}