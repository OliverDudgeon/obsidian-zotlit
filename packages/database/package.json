{
  "name": "@zotlit/database",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:tsc\" \"pnpm run dev:esbuild\"",
    "dev:tsc": "tsc --watch",
    "dev:esbuild": "node esbuild.config.js --watch",
    "build:tsc": "tsc",
    "build:esbuild": "node esbuild.config.js",
    "build": "concurrently \"pnpm run build:tsc\" \"pnpm run build:esbuild\"",
    "typecheck": "tsc --noEmit",
    "gen-schema": "bash test/gen.sh"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts"
    },
    "./worker": {
      "development": {
        "import": "./dist/src/main.dev.js",
        "types": "./dist/src/main.d.ts"
      },
      "production": {
        "import": "./dist/src/main.prod.js",
        "types": "./dist/src/main.d.ts"
      },
      "default": {
        "import": "./dist/src/main.prod.js",
        "types": "./dist/src/main.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "better-sqlite3": "workspace:@aidenlx/better-sqlite3@11.10.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "workspace:@aidenlx/better-sqlite3@11.10.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "esbuild": "^0.25.4",
		"typescript": "~5.8.2"
  },
  "dependencies": {
    "@std/collections": "npm:@jsr/std__collections@^1.1.0",
    "drizzle-orm": "^0.43.1",
    "valibot": "^1.1.0",
    "worker-fn": "^3.2.1"
  }
}
